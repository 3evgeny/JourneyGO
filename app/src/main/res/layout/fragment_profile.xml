<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.views.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvatar"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_marginStart="26dp"
        app:cardCornerRadius="999dp"
        app:cardBackgroundColor="@color/green"
        android:innerRadius="0dp"
        android:shape="ring">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="999dp"
            app:cardBackgroundColor="@color/green"
            android:layout_gravity="center"
            android:innerRadius="0dp"
            android:shape="ring">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/imageProfile"
                android:src="@drawable/ava"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/usernameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cardAvatar"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp"
        android:textSize="24dp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:text="Username"/>

    <TextView
        android:id="@+id/fioProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cardAvatar"
        android:layout_below="@+id/usernameProfile"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:textSize="12dp"
        android:textColor="@color/dark_gray"
        android:textStyle="normal"
        android:text="FIO"/>

    <TextView
        android:id="@+id/ageProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cardAvatar"
        android:layout_below="@+id/fioProfile"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:textSize="12dp"
        android:textColor="@color/dark_gray"
        android:textStyle="normal"
        android:text="Age"/>


    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_setting"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="26dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainPassportView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@+id/cardAvatar"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/typeMainPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Основной пасспорт"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/initialMainPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Инифиалы"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp" />

        <TextView
            android:id="@+id/numberMainPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер паспорта"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="55dp" />

        <ImageButton
            android:id="@+id/editMainPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="14dp"
            android:background="@drawable/ic_edit" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/interPassportView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@+id/mainPassportView"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/typeInterPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Основной пасспорт"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/initialInterPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Инифиалы"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp" />

        <TextView
            android:id="@+id/numberInterPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер паспорта"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="55dp" />

        <ImageButton
            android:id="@+id/editInterPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="14dp"
            android:background="@drawable/ic_edit" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>